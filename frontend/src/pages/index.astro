---
import '../styles/theme.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skynet Terminal</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>
<body class="h-screen flex overflow-hidden">
    <!-- Left Sidebar: Conversations -->
    <aside class="w-64 glass-panel flex flex-col z-20 hidden md:flex">
        <div class="p-4 border-b border-[var(--color-border)]">
            <div class="flex items-center gap-2 mb-4">
                <img src="/favicon.svg" alt="Logo" class="w-8 h-8 animate-glow" />
                <h1 class="text-lg font-bold tracking-wider text-[var(--color-accent)]">SKYNET</h1>
            </div>
            <button id="new-chat-btn" class="w-full py-2 px-4 rounded bg-[var(--color-accent)] text-black font-bold hover:bg-cyan-400 transition-colors flex items-center justify-center gap-2 text-sm">
                <span>+</span> New Operation
            </button>
        </div>
        
        <div class="flex-1 overflow-y-auto p-2 space-y-1" id="conversations-list">
            <!-- Conversations loaded here -->
        </div>

        <!-- System Status Panel -->
        <div class="p-4 border-t border-[var(--color-border)] bg-black/20">
            <h3 class="text-xs font-bold text-[var(--color-text-muted)] mb-2 uppercase tracking-widest">System Status</h3>
            <div class="space-y-2 text-xs font-mono">
                <div class="flex items-center justify-between">
                    <span class="text-[var(--color-text-muted)]">COORDINATOR</span>
                    <div class="flex items-center gap-2">
                        <span id="model-fast" class="text-[var(--color-accent)] truncate max-w-[80px]">...</span>
                        <span class="status-dot status-online"></span>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-[var(--color-text-muted)]">ARCHITECT</span>
                    <div class="flex items-center gap-2">
                        <span id="model-reasoning" class="text-purple-400 truncate max-w-[80px]">...</span>
                        <span class="status-dot status-online"></span>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-[var(--color-text-muted)]">ENGINEER</span>
                    <div class="flex items-center gap-2">
                        <span id="model-coding" class="text-yellow-400 truncate max-w-[80px]">...</span>
                        <span class="status-dot status-online"></span>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content: Chat -->
    <main class="flex-1 flex flex-col relative min-w-0">
        <!-- Header -->
        <header class="h-14 glass-panel border-b-0 border-x-0 flex items-center justify-between px-4 z-10">
            <div class="flex items-center gap-2 md:hidden">
                <button id="mobile-menu-btn" class="text-[var(--color-text-muted)]">‚ò∞</button>
            </div>
            <div class="text-xs font-mono text-[var(--color-text-muted)]">
                SESSION ID: <span id="session-id" class="text-[var(--color-accent)]">UNKNOWN</span>
            </div>
            <div class="flex items-center gap-4">
                <div id="bg-tasks-indicator" class="hidden text-xs font-mono text-yellow-500 flex items-center gap-1">
                    <span class="status-dot bg-yellow-500 animate-pulse"></span> BG WORKERS ACTIVE
                </div>
                <div class="text-xs font-mono text-green-500 flex items-center gap-1">
                    <span class="status-dot status-online animate-pulse"></span> SYSTEM ONLINE
                </div>
            </div>
        </header>

        <!-- Chat Area -->
        <div id="messages-panel" class="flex-1 overflow-y-auto p-4 space-y-6 scroll-smooth">
            <div id="chat-box" class="flex flex-col max-w-4xl mx-auto w-full pb-4">
                <!-- Messages -->
            </div>
        </div>

        <!-- Input Area -->
        <div class="p-4 pb-6 bg-gradient-to-t from-[var(--color-bg)] to-transparent z-20">
            <div class="max-w-4xl mx-auto relative">
                <form id="chat-form" class="relative group">
                    <div class="absolute inset-0 bg-[var(--color-accent)] opacity-5 blur-lg rounded-lg group-focus-within:opacity-10 transition-opacity"></div>
                    <input type="text" id="prompt-input" 
                        placeholder="Enter command or objective..." 
                        class="w-full p-4 pr-12 rounded-lg bg-[var(--color-bg)] border border-[var(--color-border)] text-[var(--color-text-main)] placeholder-[var(--color-text-muted)] focus:outline-none focus:border-[var(--color-accent)] transition-all relative z-10"
                        autocomplete="off"
                    >
                    <button type="submit" id="send-btn" class="absolute right-3 top-1/2 -translate-y-1/2 p-2 text-[var(--color-accent)] hover:text-white transition-colors z-20">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
                    </button>
                    <button type="button" id="stop-btn" class="absolute right-3 top-1/2 -translate-y-1/2 p-2 text-red-500 hover:text-red-400 transition-colors z-20 hidden">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><rect x="6" y="6" width="12" height="12"></rect></svg>
                    </button>
                </form>
            </div>
        </div>
    </main>

    <!-- Right Sidebar: Live Activity / Changelog -->
    <aside class="w-80 glass-panel border-l border-[var(--color-border)] flex flex-col z-20 hidden lg:flex">
        <div class="p-4 border-b border-[var(--color-border)]">
            <h2 class="text-sm font-bold text-[var(--color-text-main)] flex items-center gap-2">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline></svg>
                LIVE ACTIVITY
            </h2>
        </div>
        <div class="flex-1 overflow-y-auto p-4 space-y-4" id="changelog-list">
            <!-- Changelog items loaded here -->
            <div class="text-xs text-[var(--color-text-muted)] text-center mt-10">Waiting for system events...</div>
        </div>
    </aside>

    <script>
        // State
        let currentConversationId: number | null = null;
        const ws = new WebSocket(`ws://${window.location.host}/ws`);
        let isThinking = false;

        // DOM Elements
        const chatBox = document.getElementById('chat-box');
        const messagesPanel = document.getElementById('messages-panel');
        const conversationsList = document.getElementById('conversations-list');
        const changelogList = document.getElementById('changelog-list');
        const newChatBtn = document.getElementById('new-chat-btn');
        const sendBtn = document.getElementById('send-btn');
        const stopBtn = document.getElementById('stop-btn');
        const sessionIdEl = document.getElementById('session-id');

        // Load System Info
        fetch('/api/info')
            .then(res => res.json())
            .then(data => {
                if (data.models) {
                    const fastEl = document.getElementById('model-fast');
                    const reasoningEl = document.getElementById('model-reasoning');
                    const codingEl = document.getElementById('model-coding');
                    
                    if (fastEl) fastEl.textContent = data.models.orchestrator;
                    if (reasoningEl) reasoningEl.textContent = data.models.planner;
                    if (codingEl) codingEl.textContent = data.models.coder;
                }
            });

        // Load Changelog
        async function loadChangelog() {
            try {
                const res = await fetch('/api/changelog');
                const logs = await res.json();
                if (changelogList && logs.length > 0) {
                    changelogList.innerHTML = logs.map((log: any) => {
                        let icon = 'üìù';
                        let color = 'text-gray-400';
                        if (log.type === 'SUCCESS') { icon = '‚úÖ'; color = 'text-green-400'; }
                        if (log.type === 'ERROR') { icon = '‚ùå'; color = 'text-red-400'; }
                        if (log.type === 'PLAN') { icon = 'üß†'; color = 'text-purple-400'; }
                        
                        const time = new Date(log.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                        
                        let commitHtml = '';
                        if (log.commit_hash) {
                            commitHtml = `<div class="mt-1 text-[10px] font-mono text-[var(--color-accent)] bg-[var(--color-accent)]/10 px-1 rounded inline-block">git:${log.commit_hash}</div>`;
                        }
                        
                        return `
                            <div class="relative pl-4 border-l border-[var(--color-border)] pb-2">
                                <div class="absolute -left-[5px] top-0 w-2.5 h-2.5 rounded-full bg-[var(--color-bg)] border border-[var(--color-border)]"></div>
                                <div class="text-[10px] text-[var(--color-text-muted)] mb-1 font-mono">${time}</div>
                                <div class="text-xs font-bold ${color} mb-1 flex items-center gap-1">
                                    <span>${icon}</span> ${log.title}
                                </div>
                                <div class="text-[11px] text-[var(--color-text-muted)] leading-tight">
                                    ${log.description}
                                </div>
                                ${commitHtml}
                            </div>
                        `;
                    }).join('');
                }
            } catch (err) {
                console.error('Failed to load changelog:', err);
            }
        }
        
        async function checkActiveTasks() {
            try {
                const res = await fetch('/api/tasks/active');
                const tasks = await res.json();
                const indicator = document.getElementById('bg-tasks-indicator');
                if (indicator) {
                    if (tasks.length > 0) {
                        indicator.classList.remove('hidden');
                        indicator.title = tasks.map((t: any) => t.name).join('\n');
                    } else {
                        indicator.classList.add('hidden');
                    }
                }
            } catch (e) {}
        }
        
        // Poll changelog every 5 seconds
        setInterval(loadChangelog, 5000);
        setInterval(checkActiveTasks, 5000);
        loadChangelog();
        checkActiveTasks();

        // Load Conversations
        async function loadConversations() {
            try {
                const res = await fetch('/api/conversations');
                const conversations = await res.json();
                if (conversationsList) {
                    conversationsList.innerHTML = conversations.map((c: any) => `
                        <button onclick="switchConversation(${c.id})" class="w-full text-left px-3 py-3 rounded-lg hover:bg-white/5 text-xs truncate transition-all border border-transparent hover:border-[var(--color-border)] ${c.id === currentConversationId ? 'bg-white/10 text-[var(--color-accent)] border-[var(--color-accent)]' : 'text-[var(--color-text-muted)]'}">
                            <div class="font-bold mb-0.5 truncate">${c.title}</div>
                            <div class="text-[10px] opacity-60 font-mono">${new Date(c.created_at).toLocaleDateString()}</div>
                        </button>
                    `).join('');
                }
            } catch (err) {
                console.error('Failed to load conversations:', err);
            }
        }

        // Switch Conversation
        // @ts-ignore
        window.switchConversation = async (id) => {
            currentConversationId = id;
            if (sessionIdEl) sessionIdEl.textContent = `OP-${id.toString().padStart(4, '0')}`;
            if (chatBox) chatBox.innerHTML = '';
            
            try {
                const res = await fetch(`/api/conversations/${id}`);
                const messages = await res.json();
                messages.forEach((msg: any) => appendMessage(msg.role, msg.content));
                loadConversations();
            } catch (err) {
                console.error('Failed to load messages:', err);
            }
        };

        newChatBtn?.addEventListener('click', () => {
            currentConversationId = null;
            if (sessionIdEl) sessionIdEl.textContent = 'NEW OPERATION';
            if (chatBox) chatBox.innerHTML = '';
            loadConversations();
        });

        loadConversations();

        function scrollMessages() {
            if (messagesPanel) {
                messagesPanel.scrollTop = messagesPanel.scrollHeight;
            }
        }
        
        function setThinking(thinking: boolean) {
            isThinking = thinking;
            if (thinking) {
                sendBtn?.classList.add('hidden');
                stopBtn?.classList.remove('hidden');
                
                if (chatBox && !document.getElementById('thinking-loader')) {
                    const loaderDiv = document.createElement('div');
                    loaderDiv.id = 'thinking-loader';
                    loaderDiv.className = 'flex gap-4 max-w-[85%]';
                    loaderDiv.innerHTML = `
                        <div class="w-8 h-8 rounded bg-black border border-[var(--color-border)] flex items-center justify-center text-lg shadow-lg">ü§ñ</div>
                        <div class="bubble-agent p-4 flex items-center gap-2">
                            <span class="w-2 h-2 bg-[var(--color-accent)] rounded-full animate-bounce"></span>
                            <span class="w-2 h-2 bg-[var(--color-accent)] rounded-full animate-bounce" style="animation-delay: 0.1s"></span>
                            <span class="w-2 h-2 bg-[var(--color-accent)] rounded-full animate-bounce" style="animation-delay: 0.2s"></span>
                        </div>
                    `;
                    chatBox.appendChild(loaderDiv);
                    requestAnimationFrame(scrollMessages);
                }
            } else {
                sendBtn?.classList.remove('hidden');
                stopBtn?.classList.add('hidden');
                const loader = document.getElementById('thinking-loader');
                if (loader) loader.remove();
            }
        }
        
        function appendMessage(role: string, content: string) {
            if (!chatBox) return;

            const msgDiv = document.createElement('div');
            msgDiv.className = `flex gap-4 max-w-[85%] ${role === 'user' ? 'ml-auto flex-row-reverse' : ''}`;
            
            let avatarHtml = role === 'user' 
                ? '<div class="w-8 h-8 rounded bg-[var(--color-accent)] flex items-center justify-center text-lg shadow-lg text-white">üë§</div>' 
                : '<div class="w-8 h-8 rounded bg-black border border-[var(--color-border)] flex items-center justify-center text-lg shadow-lg">ü§ñ</div>';
            
            let bubbleClass = role === 'user' ? 'bubble-user' : 'bubble-agent';
            let contentHtml = '';

            // @ts-ignore
            const parsedContent = marked.parse(content);

            if (role === 'user') {
                contentHtml = `<div class="markdown-content text-sm">${parsedContent}</div>`;
            } else if (role === 'agent-thought') {
                contentHtml = `
                    <div class="bubble-thought">
                        <div class="text-[10px] text-[var(--color-accent)] font-bold mb-1 uppercase tracking-wider">Reasoning Process</div>
                        <div class="markdown-content text-xs opacity-80">${parsedContent}</div>
                    </div>`;
                // Thoughts don't get the main bubble style, they are more subtle
                msgDiv.className = `flex gap-4 max-w-[85%]`;
                bubbleClass = ''; 
                avatarHtml = '<div class="w-8 h-8"></div>'; // Spacer
            } else if (role === 'agent-action') {
                const isError = content.includes('Error') || content.includes('Exception') || content.includes('FAILED');
                const borderColor = isError ? 'border-red-500/50' : 'border-blue-500/50';
                const titleColor = isError ? 'text-red-400' : 'text-blue-400';
                const title = isError ? 'SYSTEM ERROR' : 'TOOL EXECUTION';
                
                contentHtml = `
                    <div class="bg-black/40 border ${borderColor} rounded p-3 text-xs font-mono">
                        <div class="font-bold ${titleColor} mb-2 flex items-center gap-2">
                            ${isError ? '‚ö†Ô∏è' : '‚ö°'} ${title}
                        </div>
                        <div class="opacity-80 whitespace-pre-wrap overflow-x-auto">${content}</div>
                    </div>`;
                msgDiv.className = `flex gap-4 max-w-[95%]`; // Actions can be wider
                bubbleClass = '';
                avatarHtml = '<div class="w-8 h-8"></div>'; // Spacer
            } else {
                contentHtml = `<div class="markdown-content text-sm">${parsedContent}</div>`;
            }

            if (bubbleClass) {
                msgDiv.innerHTML = `
                    ${avatarHtml}
                    <div class="${bubbleClass} p-4 shadow-lg">
                        ${contentHtml}
                    </div>
                `;
            } else {
                msgDiv.innerHTML = `
                    ${avatarHtml}
                    <div class="w-full">
                        ${contentHtml}
                    </div>
                `;
            }
            
            chatBox.appendChild(msgDiv);
            requestAnimationFrame(scrollMessages);
        }

        ws.onmessage = function(event) {
            const data = JSON.parse(event.data);
            
            if (data.type === 'conversation_created') {
                currentConversationId = data.id;
                if (sessionIdEl) sessionIdEl.textContent = `OP-${data.id.toString().padStart(4, '0')}`;
                loadConversations();
                return;
            }

            const loader = document.getElementById('thinking-loader');
            if (loader) loader.remove();
            
            appendMessage(data.role, data.content);
            
            if (data.role === 'agent-thought' || data.role === 'agent-action') {
                setThinking(true);
            } else if (data.role === 'assistant' || data.role === 'system') {
                setThinking(false);
                // Refresh changelog on completion
                loadChangelog();
            }
        };

        ws.onerror = function(error) {
            console.error('WebSocket error:', error);
            setThinking(false);
        };

        const chatForm = document.getElementById('chat-form');
        const promptInput = document.getElementById('prompt-input');
        
        if (chatForm && promptInput instanceof HTMLInputElement) {
            chatForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const goal = promptInput.value;
                if (goal) {
                    appendMessage('user', goal);
                    ws.send(JSON.stringify({
                        goal: goal,
                        conversation_id: currentConversationId
                    }));
                    promptInput.value = '';
                    setThinking(true);
                }
            });
            
            stopBtn?.addEventListener('click', function() {
                ws.send(JSON.stringify({ action: "stop" }));
                setThinking(false);
            });
        }
    </script>
</body>
</html>